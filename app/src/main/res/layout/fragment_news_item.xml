<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_newsIsImportant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_newsUser"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/txt_newsID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_newsTitle"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/img_newsUser"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_newsDescription"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_newsTitle"
        android:layout_margin="4dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/img_newsUser"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txt_newsExpireDate"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_newsDescription"
        android:layout_margin="4dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/img_newsUser"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold" />

</RelativeLayout>
